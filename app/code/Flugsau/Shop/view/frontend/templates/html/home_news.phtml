            <div class="home-news-entry">
                <div class="home-news-entry-img"><img src="<?php echo $post->getFeaturedImage() ?>" /></div>
                <div class="home-news-entry-content-wrapper">
                    <div class="home-news-entry-title"><?php echo $block->escapeHtml($post->getTitle()) ?></div>
                    <div class="home-news-entry-date"><?php echo $post->getPublishDate('d.m.Y') ?></div>
                    <div class="home-news-entry-content"><?php echo $block->getShorContent($post) ?></div>
