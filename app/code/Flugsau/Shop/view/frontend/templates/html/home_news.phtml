<?php
    /** @var \Magefan\Blog\Block\Widget\Recent $block */
    $posts = $block->getPostCollection();
?>
<?php if ($posts->count()): ?>
<div class="home-news-wrapper">
    <div class="home-news">
        <h3><?php echo $block->escapeHtml($block->getTitle()) ?></h3>
        <div class="home-news-entries">
